bundle common lastops_common
# @ignore
{
    vars:
        "inputs" slist => {
                            "$(this.promise_dirname)/helpers.cf",
                            "$(this.promise_dirname)/sudo.cf",
                            "$(this.promise_dirname)/users.cf",
                        };

    reports:
        verbose_mode::
            "$(this.bundle): adding lastops lib inputs='$(inputs)'";
}

body file control
# @ignore
{
    inputs => { @(lastops_common.inputs) };
}
